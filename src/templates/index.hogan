<div data-container>

  <h1>{{ name }}</h1>

  <div class="field">
    <div class="label">
        <label for="shipname">Name</label>
    </div>
    <div class="input">
        <input name="name"
               value="{{ ship.name }}"
               placeholder="Please enter a name"
               id="shipname">
    </div>
  </div>

  {{# attributes }}
  {{> increment }}
  {{/ attributes }}

</div>
